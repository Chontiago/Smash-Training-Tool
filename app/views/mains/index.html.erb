


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-info">
            <tr>
              <th>Main</th>
              <th>Win Rate</th>
              <th>Best Stage</th>
              <th>Worst Stage</th>
              <!-- Add more column headers here -->
              <th>User Id</th>
              <th colspan="2"></th>

            </tr>
          </thead>
          <tbody>
            <% @mains.each do |main| %>
            <% if main.user == current_user  %>
              <tr>
                
                <td><%= link_to main.Character , main %></td>
                <td><%= main.Win_rate %></td>
                <td><%= main.Best_Stage %></td>
                <td><%= main.Worst_Stage %></td>
                <td><%= main.user_id %></td> 
                <!-- Add more columns based on your table structure -->
                <td><%= link_to "Show", main, class: "btn btn-primary btn-sm" %></td>
                <td><%= link_to "Edit", edit_main_path(main), class: "btn btn-secondary btn-sm" %></td>
                
                
               
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "New main", new_main_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
